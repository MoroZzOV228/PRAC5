<Window x:Class="_5TaskSql.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_5TaskSql"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Width="842"
        Height="545"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="Comic Sans MS"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        mc:Ignorable="d">

    <Grid Background="#F5F5F5"
          MouseDown="Grid_MouseDown">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="329" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Image
            Grid.Row="0"
            Grid.Column="0"
            Source="/Images/DireRadiant.png"
            Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="-4,0,-130,0" />

        <Border
            Grid.Column="1"
            Margin="0 50 0 0"
            Width="385"
            Height="404"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="#FFFFFF"
            CornerRadius="8"
            Effect="{StaticResource MaterialDesignElevationShadow24}" />

        <StackPanel
            Grid.Row="0"
            Grid.Column="1"
            Height="370"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <TextBlock
                    FontSize="20"
                    Margin="0 30 10 0"
                    FontWeight="Medium"
                    Foreground="#c10020"
                    Text="Войти в систему"
                    TextAlignment="Center"
 Height="30" Width="173" />
                <TextBlock
                    FontSize="12"
                    FontWeight="Regular"
                    Foreground="#c10020"
                    Text="AEGIS GYM"
                    TextWrapping="Wrap" Width="116" />
            </StackPanel>

            <StackPanel Margin="40,30">
                <TextBlock
                    Margin="0"
                    FontSize="12"
                    FontWeight="Regular"
                    Foreground="#7F7E83"
                    Text="Email" />
                <Border
                    Width="307"
                    Height="40"
                    Padding="5"
                    Background="#F4F4F4"
                    CornerRadius="10">
                    <TextBox
                        x:Name="TblLogin"
                        Width="299"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        materialDesign:HintAssist.Hint="Введите адрес электронной почты..."
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        materialDesign:TextFieldAssist.UnderlineBrush="#F4F4F4"
                        Foreground="#a14c4c" />
                </Border>
            </StackPanel>

            <StackPanel Margin="40,20">
                <TextBlock
                    FontSize="12"
                    FontWeight="Regular"
                    Foreground="#7F7E83"
                    Text="Password" />
                <Border
                    Width="307"
                    Height="40"
                    Padding="5"
                    Background="#F4F4F4"
                    CornerRadius="10">
                    <PasswordBox
                        x:Name="PbPassword"
                        Width="295"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        materialDesign:HintAssist.Hint="Введите пароль..."
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        materialDesign:TextFieldAssist.UnderlineBrush="#F4F4F4"
                        Foreground="#a14c4c" />
                </Border>
            </StackPanel>

            <StackPanel
                Margin="0,10,0,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

                <Button
                    x:Name="BtnLogin"
                    materialDesign:ButtonProgressAssist.IndicatorBackground="Transparent"
                    materialDesign:ButtonProgressAssist.IndicatorForeground="#a14c4c"
                    materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                    materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                    materialDesign:ButtonProgressAssist.Value="-1"
                    Background="Transparent"
                    BorderBrush="#c10020"
                    Click="BtnLogin_Click"
                    Foreground="#c10020"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                    Style="{StaticResource MaterialDesignOutlinedButton}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Margin="0,2,3,0" Kind="Person" />
                        <TextBlock Text="Войти" />
                    </StackPanel>
                </Button>
            </StackPanel>

            <TextBlock
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Run>Или получить временный</Run>
                <Run
                    Cursor="Hand"
                    Foreground="#c10020"
                    TextDecorations="Underline">
                    ограниченный доступ
                </Run>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>

